<?php $__env->startSection('title', 'Início'); ?>

<?php $__env->startSection('content'); ?>
<!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <?php foreach($posts as $post): ?>
                <div class="post-preview">
                    <a href="<?php echo e(route('blog.post', [$post->slug])); ?>">
                        <h2 class="post-title">
                            <?php echo e($post->title); ?>

                        </h2>
                    </a>
                        <h3 class="post-subtitle">
                            <?php echo Illuminate\Support\Str::limit(Markdown::parse($post->content), 20); ?>

                        </h3>
                    </a>
                    <p class="post-meta"><?php echo e($post->user->name); ?> em <?php echo e($post->created_at->format('d/m/Y')); ?></p>
                </div>
            <?php endforeach; ?>
                <hr>
                <!-- Pager -->
                <ul class="pager">
                    <?php if($posts->previousPageUrl()): ?>
                    <li class="next">
                        <a href="#">Voltar</a>
                    </li>
                    <?php endif; ?>
                    <?php if($posts->hasMorePages()): ?>
                    <li class="next"><a href="<?php echo $posts->nextPageUrl(); ?>">Próxima página</a></li>
                    <?php endif; ?>

                </ul>
            </div>
        </div>
    </div>
<?php $__env->stopSection(); ?>

<?php echo $__env->make('blog.app', array_except(get_defined_vars(), array('__data', '__path')))->render(); ?>